<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_loading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center|top"
                        android:paddingTop="64dp"
                        android:text="@string/loading_thumbnail"
                        android:textAlignment="center"
                        android:textColor="@color/primaryLightColor"
                        android:textSize="16sp"
                        android:textStyle="italic|bold" />

                    <ImageView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tv_project_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/banner"
                        android:padding="8dp"
                        android:text="Test Name"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_project_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="@color/secondaryTextColor" />
            </android.support.v7.widget.CardView>

            <io.square1.richtextlib.ui.RichContentView
                android:id="@+id/rich_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:padding="10dip" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_no_ss_found"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="8dp"
                        android:text="@string/no_screenshots_fonund"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:paddingEnd="4dp"
                            android:paddingStart="4dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/img_ss_1"
                                    android:layout_width="@dimen/image_ss_width"
                                    android:layout_height="@dimen/image_ss_hight"
                                    android:visibility="gone" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/img_ss_2"
                                    android:layout_width="@dimen/image_ss_width"
                                    android:layout_height="@dimen/image_ss_hight"
                                    android:visibility="gone" />
                            </android.support.v7.widget.CardView>


                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/img_ss_3"
                                    android:layout_width="@dimen/image_ss_width"
                                    android:layout_height="@dimen/image_ss_hight"
                                    android:visibility="gone" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/img_ss_4"
                                    android:layout_width="@dimen/image_ss_width"
                                    android:layout_height="@dimen/image_ss_hight"
                                    android:visibility="gone" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/img_ss_5"
                                    android:layout_width="@dimen/image_ss_width"
                                    android:layout_height="@dimen/image_ss_hight"
                                    android:visibility="gone" />
                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </HorizontalScrollView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_rom_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp"
        android:backgroundTint="@color/secondaryColor"
        android:text="@string/download"
        android:textColor="@color/primaryColor"
        android:theme="@style/ButtonTheme" />
</RelativeLayout>